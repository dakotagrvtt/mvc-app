<div class="container-fluid">
  <div class=row>
    <div class="col col-md-12">

      <h2>Confirm deletion of course</h2>
      <br>
      <br> ID: <%=  course._id %>
      <br> School Number: <%=course.school_num%>
      <br> Course Number: <%=course.course_num%>
      <br> Name: <%=course.name%>
      <br> Description: <%=course.description %>
      <br> Credit Hours: <%=course.credit_hours %>
      <br> In Spring?: <%=course.inSpring %>
      <br> In Summer?: <%=course.inSummer %>
      <br> In Fall?: <%=course.inFall %>
