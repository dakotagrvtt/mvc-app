<!-- main - a row holds columns -->
<div class=row>
    <div class="col col-xs-12">
  
      <div class="form-group">
        <label for="given">Given name</label>
        <input type="text" class="form-control" id="given" name="given" value="<%= teacher.given %>">
      </div>
  
      <div class="form-group">
        <label for="family">Family name</label>
        <input type="text" class="form-control" id="family" name="family" value="<%= teacher.family %>">
      </div>
  
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= teacher.email %>" required>
      </div>

      <div class="form-group">
        <label for="salary">Salary </label>
        <input type="text" class="form-control" id="salary" name="salary" value="<%= teacher.salary %>">
      </div>
  
      <div class="form-group">
        <label for="github">Github </label>
        <input type="text" class="form-control" id="github" name="github" value="<%= teacher.github %>">
      </div>
    </div>
  </div>
  
  <!-- PUT CLIENT SIDE CODE HERE -->
